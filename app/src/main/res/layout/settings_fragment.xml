<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bc9aff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:paddingStart="24dp"
        android:paddingLeft="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:text="@string/txt_unit"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/txt_km"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/txt_mil"/>

            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:text="@string/txt_sounds"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/txt_on"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/txt_off"/>

            </RadioGroup>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="@string/txt_map"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="@string/txt_theme"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="@string/txt_language"/>

    </LinearLayout>

</LinearLayout>